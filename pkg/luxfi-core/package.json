{
  "name": "@luxfi/core",
  "version": "10.0.2",
  "description": "Core types and shared utilities related to blockchain",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "scope": "@luxfi"
  },
  "author": "Hanzo AI, Inc.",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxfi/bridge.git",
    "directory": "pkg/luxfi-core"
  },
  "keywords": [
    "hanzo",
    "luxdefi"
  ],
  "scripts": {
    "lat": "npm show @luxfi/core version",
    "pub": "npm publish",
    "build": "tsc --project tsconfig.json && tsc --project tsconfig.cjs.json",
    "prepublishOnly": "npm run build",
    "build:clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/types/index.js",
      "require": "./dist/cjs/types/index.js"
    },
    "./constants": {
      "import": "./dist/esm/constants/index.js",
      "require": "./dist/cjs/constants/index.js"
    }
  },
  "dependencies": {},
  "peerDependencies": {},
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
