{
  "name": "@luxbridge/ui-automation",
  "version": "1.0.0",
  "description": "UI automation tests for Lux Bridge",
  "scripts": {
    "test": "jest",
    "test:smoke": "jest --testPathPattern=smoke",
    "test:mpc": "jest --testPathPattern=mpc",
    "test:networks": "jest --testPathPattern=networks",
    "test:tokens": "jest --testPathPattern=tokens",
    "test:watch": "jest --watch",
    "setup:wallets": "ts-node scripts/setup-wallets.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/selenium-webdriver": "^4.1.21",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "selenium-webdriver": "^4.18.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ethers": "^6.11.1",
    "viem": "^2.9.9"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 120000,
    "roots": ["<rootDir>/tests"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}