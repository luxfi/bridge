{
  "name": "@luxbridge/server",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "dev": "nodemon",
    "db": "node dist/db.js",
    "nodes": "node dist/nodes.js",
    "tc": "tsc",
    "prisma:gen": "pnpx prisma generate",
    "build": "tsc && tsc-alias && pnpx prisma generate",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "update-db": "kubectl exec -it $(kubectl get pod -l app=bridge-server -o jsonpath='{.items[0].metadata.name}') -- pnpm run db",
    "colima:start": "colima start --arch aarch64,x86_64",
    "docker:build": "docker buildx build --platform linux/amd64 -t ghcr.io/luxfi/bridge/server:latest -f docker/Dockerfile .",
    "docker:login": "docker login --username $GH_USER --password $GH_TOKEN ghcr.io",
    "docker:push": "docker push ghcr.io/luxfi/bridge/server:latest",
    "k8s:apply": "kubectl apply -f k8s/bridge-deployment.yaml && kubectl apply -f k8s/bridge-service.yaml",
    "k8s:logs": "kubectl logs -l app=bridge-server -f",
    "k8s:scale": "kubectl scale deployment bridge-server --replicas=$REPLICAS",
    "k8s:create-secret": "kubectl create secret generic bridge-server-secret --from-literal=POSTGRESQL_URL=\"$POSTGRESQL_URL\" --dry-run=client -o yaml | kubectl apply -f -",
    "k8s:restart": "kubectl rollout restart deployment bridge-server",
    "k8s:status": "kubectl get deployments,service,pods -l app=bridge-server -o wide",
    "k8s:stop": "kubectl delete deployment bridge-server || true && kubectl delete service bridge-service || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multicoin-address-validator": "^0.5.3",
    "@types/node": "^20.17.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^6.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@luxfi/utila": "^3.0.0",
    "@prisma/client": "^6.0.0",
    "@solana/addresses": "2.0.0-preview.1.20240323014038.94f2053250ed5d78cd55951bdec72ef7795e528e",
    "axios": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "express": "^4.21.1",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multicoin-address-validator": "^0.5.22",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  }
}
