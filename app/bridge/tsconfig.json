{
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [ "/node_modules" ],
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "react": ["node_modules/@types/react"]
    },
    "plugins": [ { "name": "next" } ]
  }
}
