{
  "extends": "../tsconfig.base.json",
  "include": [
     "next-env.d.ts",
     "types.d.ts",
     "**/*.ts",
     "**/*.tsx",
     ".next/types/**/*.ts",
     "**/**/*.tsx",
     "pages/_app.js"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "**/*.stories.tsx"
  ],
  "plugins": [
    {
      "name": "next"
    }
  ],
  "compilerOptions": {
    "target": "es2020",
    "jsx": "preserve",
    "lib": [
      "es2020",
      "dom",
      "dom.iterable"
    ]
  }
}
