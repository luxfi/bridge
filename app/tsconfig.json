{
  "extends": "../tsconfig.base.json",
  "include": [
    "next-env.d.ts", 
    "types.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    "**/**/*.tsx",
    "pages/_app.js"
  ],
  "exclude": [
    "node_modules"
  ],

  "compilerOptions": {
    "declaration": true,
    "preserveSymlinks": true,
    "target": "es2020",
    "lib": [
      "es2020",
      "dom", 
      "dom.iterable", 
    ],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
}